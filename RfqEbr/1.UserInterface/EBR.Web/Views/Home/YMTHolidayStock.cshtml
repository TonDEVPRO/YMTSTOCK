    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#StockTable').DataTable({
                ajax: {
                    url: '/Home/GetStockNDS',
                    type: 'POST',
                    dataSrc: 'data'
                },
                responsive: true,
                columns: [
                    { data: 'Id', className: 'text-center' },
                    { data: 'Style', className: 'text-center' },
                    { data: 'Description', className: 'text-center' },
                    { data: 'Color', className: 'text-center' },
                    { data: 'Size', className: 'text-center' },
                    { data: 'Cost', className: 'text-center' },
                    { data: 'Price', className: 'text-center' },
                    { data: 'Total', className: 'text-center' },
                    {
                        data: null,
                        className: 'text-center',
                        render: function (data) {
                            return `<button class="btn btn-success edit-button" data-id="${data.Id}">Update</button>`;
                        }
                    }
                ],
                initComplete: function () {
                    $('#StockTable').on('click', '.edit-button', function () {
                        const id = $(this).data('id');
                        const scope = angular.element($('#StockTable')).scope();

                        scope.$apply(function () {
                            scope.editQuotation(id);
                            $('#editModal').modal('show');
                        });
                    });
                }
            });
        });
        function editQuotation(id) {
            $.ajax({
                url: '/Home/EditStock',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    console.log('Success:', response);

                    $('#Style').val(response.StockList.Style);
                    $('#Description').val(response.StockList.Description);
                    $('#Color').val(response.StockList.Color);
                    $('#Size').val(response.StockList.Size);
                    $('#Cost').val(response.StockList.Cost);
                    $('#Prices').val(response.StockList.Price);
                    $('#Totals').val(response.StockList.Total);
                    $('#editModal').modal('show');
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        }
    </script>
}

