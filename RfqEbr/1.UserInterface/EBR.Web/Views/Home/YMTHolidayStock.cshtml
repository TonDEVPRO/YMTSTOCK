        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    <i class="mdi mdi-plus-circle me-2"></i>
                                    AddStock
                                </button>
                            </div>
                            <div class="col-sm-8">
                                <div class="text-sm-end">
                                    <button type="button" class="btn btn-warning right" data-bs-toggle="modal" data-bs-target="#AddMasterStock" ng-click="GetData();">
                                        AddMasterStock
                                    </button>
                                    <button type="button" class="btn btn-info right" data-bs-toggle="modal" data-bs-target="#PrintReport">
                                        PrintReport
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body table-responsive">
                                        <table id="StockTable" class="table  table-striped table-bordered nowrap" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">Id</th>
                                                    <th class="text-center">Style</th>
                                                    <th class="text-center">Description</th>
                                                    <th class="text-center">Color</th>
                                                    <th class="text-center">Size</th>
                                                    <th class="text-center">Cost</th>
                                                    <th class="text-center">Price</th>
                                                    <th class="text-center">Total</th>
                                                    <th class="text-center">UpdateStock</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="employee in employees">
                                                    <td class="text-center">{{employee.Id}}</td>
                                                    <td class="text-center">{{employee.Style}}</td>
                                                    <td class="text-center">{{employee.Description}}</td>
                                                    <td class="text-center">{{employee.Color}}</td>
                                                    <td class="text-center">{{employee.Size}}</td>
                                                    <td class="text-center">{{employee.Cost}}</td>
                                                    <td class="text-center">{{employee.Price}}</td>
                                                    <td class="text-center">{{employee.Total}}</td>
                                                    <td class="text-center">
                                                        <button type="button" class="btn btn-success right" data-bs-toggle="modal" data-bs-target="#editModal">
                                                            Update
                                                        </button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Stock</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Style</label>
                                <select ng-model="ddlStyle"
                                        class="form-control"
                                        ng-options="x for x in ListStockStyle" ng-change="GetDescStyle(ddlStyle)"
                                        placeholder="Style">
                                </select>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Description</label>
                                <input type="text" class="form-control" ng-model="ListDesc.Description" disabled>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Color</label>
                                <select ng-model="ddlcolor"
                                        class="form-control"
                                        ng-options="x for x in ListColor" ng-change="GetDescColors(ddlStyle,ddlcolor)"
                                        placeholder="Color">
                                </select>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Size</label>
                                <select ng-model="ddlSize"
                                        class="form-control"
                                        ng-options="x for x in ListSizeNDS" ng-change="GetDetailAll(ddlStyle,ddlcolor,ddlSize)"
                                        placeholder="Size">
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Cost</label>
                                <input type="text" class="form-control" ng-model="ListStockTotal.Cost" disabled>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Price</label>
                                <input type="text" class="form-control" ng-model="ListStockTotal.Price" disabled>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Total</label>
                                <input type="text" class="form-control" ng-model="ListStockTotal.Total" disabled>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Status</label>

                                <select class="form-control" ng-switch="ListStockTotal.Status">
                                    <option ng-switch-when="0">Non-active</option>
                                    <option ng-switch-when="1">Active</option>
                                </select>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">NewQty</label>
                                <input type="number" class="form-control" ng-model="AddNewQty" ng-change="SumTotal(ListStockTotal.Total , AddNewQty);">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">TotalStock</label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="TotalStock"
                                       disabled>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success" ng-click="SaveStock(ListStockTotal,TotalStock,AddNewQty ,@Model );">Save</button>
                        <button type="submit" class="btn btn-warning" ng-click="reloadPage();">Clear</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Update Stock</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Style</label>
                                <input type="text" class="form-control" id="Style" ng-model="ListStock.Style" disabled />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Description</label>
                                <input type="text" class="form-control" id="Description" ng-model="ListStock.Description" disabled />
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Color</label>
                                <input type="text" class="form-control" id="Color" ng-model="ListStock.Color" disabled />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Size</label>
                                <input type="text" class="form-control" id="Size" ng-model="ListStock.Size" disabled />
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Cost</label>
                                <input type="number" class="form-control" id="Cost" ng-model="ListStock.Cost" disabled />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Price</label>
                                <input type="text" class="form-control" id="Price" ng-model="ListStock.Price" disabled />
                            </div>
                        </div>

                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Total</label>
                                <input type="text" class="form-control" id="Total" ng-model="ListStock.Total" disabled />

                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">NewQty</label>
                                <input type="number" class="form-control" ng-model="ReduceQty" ng-change="ReduceTotal(ListStock, ReduceQty);">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">TotalStock</label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="UpTotalStock"
                                       disabled>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success" ng-click="UpdateStockss(ListStock,ReduceQty,UpTotalStock ,@Model);">Update</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="AddMasterStock" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">MasterStock</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Style</label>
                                <input type="text" class="form-control" ng-model="AddMaster.Style">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Description</label>
                                <input type="text" class="form-control" ng-model="AddMaster.Description">
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Color</label>
                                <input type="text" class="form-control" ng-model="AddMaster.Color">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Size</label>
                                <input type="text" class="form-control" ng-model="AddMaster.Size">
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Cost</label>
                                <input type="text" class="form-control" ng-model="AddMaster.Cost">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Price</label>
                                <input type="text" class="form-control" ng-model="AddMaster.Price">
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Total</label>
                                <input type="text" class="form-control" ng-model="AddMaster.Total">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success" ng-click="SaveMasterStock(AddMaster ,@Model);">Save</button>
                            <button type="submit" class="btn btn-warning" ng-click="reloadPage();">Clear</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="PrintReport" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
