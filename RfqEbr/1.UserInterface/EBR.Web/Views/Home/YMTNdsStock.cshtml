        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    <i class="mdi mdi-plus-circle me-2"></i>
                                    NDS-AddStock
                                </button>
                            </div>
                            <div class="col-sm-8">
                                <div class="text-sm-end">
                                    <button type="button" class="btn btn-info right" data-bs-toggle="modal" data-bs-target="#AddMasterStock" ng-click="GetData();">
                                        <i class="mdi mdi-alarm-plus me-2"></i>
                                        NewMasterStock
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="row table-responsive">
                            <table id="dataTable" class="display table  table-striped table-bordered nowrap mt-2">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Style</th>
                                        <th>Description</th>
                                        <th>Color</th>
                                        <th>Size</th>
                                        <th>Price</th>
                                        <th>Cost</th>
                                        <th>Total</th>
                                        <th>EditStock</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="item in data">
                                        <td>{{ item.Id }}</td>
                                        <td>{{ item.Style }}</td>
                                        <td>{{ item.Description }}</td>
                                        <td>{{ item.Color }}</td>
                                        <td>{{ item.Size }}</td>
                                        <td>{{ item.Price }}</td>
                                        <td>{{ item.Cost }}</td>
                                        <td>{{ item.Total }}</td>
                                        <td>
                                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editModal" ng-click="editStocks(item.Id);">
                                                Update
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">NDS-AddStock</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Style</label>
                                <select ng-model="ddlStyle"
                                        class="form-control"
                                        ng-options="x for x in ListStockStyle" ng-change="GetDescStyle(ddlStyle)"
                                        placeholder="Style">
                                </select>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Description</label>
                                <input type="text" class="form-control" ng-model="ListDesc.Description" disabled>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Color</label>
                                <select ng-model="ddlcolor"
                                        class="form-control"
                                        ng-options="x for x in ListColor" ng-change="GetDescColors(ddlStyle,ddlcolor)"
                                        placeholder="Color">
                                </select>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Size</label>
                                <select ng-model="ddlSize"
                                        class="form-control"
                                        ng-options="x for x in ListSizeNDS" ng-change="GetDetailAll(ddlStyle,ddlcolor,ddlSize)"
                                        placeholder="Size">
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Cost</label>
                                <input type="text" class="form-control" ng-model="ListStockTotal.Cost" disabled>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Price</label>
                                <input type="text" class="form-control" ng-model="ListStockTotal.Price" disabled>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Total</label>
                                <input type="text" class="form-control" ng-model="ListStockTotal.Total" disabled>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Status</label>

                                <select class="form-control" ng-switch="ListStockTotal.Status">
                                    <option ng-switch-when="0">Non-active</option>
                                    <option ng-switch-when="1">Active</option>
                                </select>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">NewQty</label>
                                <input type="number" class="form-control" ng-model="AddNewQty" ng-change="SumTotal(ListStockTotal.Total , AddNewQty);">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">TotalStock</label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="TotalStock"
                                       disabled>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-12">
                                <label class="col-form-label text-bold">Remark/Location</label>
                                <input type="text" class="form-control" ng-model="ListStockTotal.Remark">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success" ng-click="SaveStock(ListStockTotal,TotalStock,AddNewQty ,@Model.EmpNo );">Save</button>
                        <button type="submit" class="btn btn-warning" ng-click="reloadPage();">Clear</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Update Stock</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Style</label>
                                <input type="text" class="form-control" id="Style" ng-model="ListStock.Style" disabled />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Description</label>
                                <input type="text" class="form-control" id="Description" ng-model="ListStock.Description" disabled />
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Color</label>
                                <input type="text" class="form-control" id="Color" ng-model="ListStock.Color" disabled />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Size</label>
                                <input type="text" class="form-control" id="Size" ng-model="ListStock.Size" disabled />
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Cost</label>
                                <input type="number" class="form-control" id="Cost" ng-model="ListStock.Cost" disabled />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Price</label>
                                <input type="text" class="form-control" id="Price" ng-model="ListStock.Price" disabled />
                            </div>
                        </div>

                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Total</label>
                                <input type="text" class="form-control" id="Total" ng-model="ListStock.Total" disabled />

                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Remark/Location</label>
                                <input type="text" class="form-control" id="Total" ng-model="ListStock.Remark" disabled />

                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">NewQty</label>
                                <input type="number" class="form-control" ng-model="ReduceQty" ng-change="ReduceTotal(ListStock, ReduceQty);">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">TotalStock</label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="UpTotalStock"
                                       disabled>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success" ng-click="UpdateStockss(ListStock,ReduceQty,UpTotalStock ,@Model.EmpNo);">Update</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="AddMasterStock" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">MasterStock</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Style</label>
                                <input type="text" name="StyleNo" id="StyleNo" ng-model="StyleNo" ng-keyup="complete(StyleNo)" class="form-control" />
                                <ul class="list-group">
                                    <li class="list-group-item" ng-repeat="countrydata in filterCountry" ng-click="fillTextbox(countrydata)">{{countrydata}}</li>
                                </ul>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Description</label>
                                <input type="text" class="form-control" ng-model="ListStyle.Description">
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Color</label>
                                <input type="text" name="Color" id="Color" ng-model="Color" ng-keyup="completeColor(Color)" class="form-control" />
                                <ul class="list-group">
                                    <li class="list-group-item" ng-repeat="Colordata in filterDataColor" ng-click="fillColor(Colordata)">{{Colordata}}</li>
                                </ul>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Size</label>
                                <input type="text" name="Size" id="Size" ng-model="Size" ng-keyup="completeSize(Size)" class="form-control" />
                                <ul class="list-group">
                                    <li class="list-group-item" ng-repeat="Sizedata in filterDataSize" ng-click="fillSize(Sizedata)">{{Sizedata}}</li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Cost</label>
                                <input type="number" class="form-control" ng-model="AddMaster.Cost">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Price</label>
                                <input type="number" class="form-control" ng-model="AddMaster.Price">
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Total</label>
                                <input type="number" class="form-control" ng-model="AddMaster.Total">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="col-form-label text-bold">Remark/Location</label>
                                <input type="text" class="form-control" id="Total" ng-model="AddMaster.Remark" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success" ng-click="SaveMasterStock(StyleNo,ListStyle.Description , Color , Size ,   AddMaster ,@Model);">Save</button>
                            <button type="submit" class="btn btn-warning" ng-click="reloadPage();">Clear</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
