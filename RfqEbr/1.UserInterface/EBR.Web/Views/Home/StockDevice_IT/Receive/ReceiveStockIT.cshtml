                                                <div class="col-md-6">
                                                    <div class="d-flex align-items-center mb-1">
                                                        <input type="date" class="form-control w-50" ng-model="FilterTransData.startDate" ng-change="filterTransData()">
                                                        <span class="mx-2">to</span>
                                                        <input type="date" class="form-control w-50" ng-model="FilterTransData.endDate" ng-change="filterTransData()">
                                                    </div>
                                                    <div class="col-lg-12 col-6 mb-1">
                                                        <label for="TypeReceive">Type Receive</label>
                                                        <!-- implement later -->
                                                        <div class="dropdown position-relative">
                                                            <input type="text"
                                                                   ng-change="filterTransData()"
                                                                   ng-model="FilterTransData.TrxName"
                                                                   ng-focus="isTypeReceiveOpen = true"
                                                                   ng-blur="hideDropdown($event)"
                                                                   placeholder="Type to search..."
                                                                   class="form-control" 
                                                                   autocomplete="off">
                                                            <ul class="dropdown-menu w-100" ng-class="{'show': isTypeReceiveOpen}" style="max-height: 200px; overflow-y: auto;">
                                                                <li ng-repeat="item in receiveAllList | filter:FilterTransData.TrxName" ng-mousedown="selectTransactionType(item.TrxName)">
                                                                    <a class="dropdown-item" href="#">{{ item.TrxName }}</a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 col-6 mb-1">
                                                        <label for="ItemName">Item Name</label>
                                                        <div class="dropdown position-relative">
                                                            <input type="text"
                                                                   ng-change="filterTransData()"
                                                                   ng-model="FilterTransData.ItemName"
                                                                   ng-focus="isItemNameOpen = true"
                                                                   ng-blur="hideDropdown($event)"
                                                                   placeholder="Type to search..."
                                                                   class="form-control"
                                                                   autocomplete="off">
                                                            <ul class="dropdown-menu w-100" ng-class="{'show': isItemNameOpen}" style="max-height: 200px; overflow-y: auto;">
                                                                <li ng-repeat="item in allStockList | filter:FilterTransData.ItemName" ng-mousedown="selectItemName(item.ItemName)">
                                                                    <a class="dropdown-item" href="#">{{ item.ItemName }}</a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <br />
                                                    <div class="d-block" style="height:4vh; text-align:center">
                                                        <span class="text-danger">Search ไม่ต้องกดปุ่ม</span>
                                                    </div>
                                                    <div class=" col-md-12">
                                                        <div class="">
                                                            <a href="@Url.Action("ViewFormReceiveStockIT", "ReceiveStockDeviceIT")?EmpNo=@Model.EmpNo&CodeId=@Model.CodeId" class="btn btn-success rounded d-flex align-items-center justify-content-center fs-4" style=""> Receive Item</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive m-3">
                                <table id="dataTable" class="display table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th class="text-center">DocNo</th>
                                            <th class="text-center">Receive Date</th>
                                            <th class="text-center">ItemName</th>
                                            <th class="text-center">Type Receive</th>
                                            <th class="text-center">Supplier</th>
                                            <th class="text-center">Qty In</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in Data[currentPage]">
                                            <td class="text-center">{{item.DocNo}}</td>
                                            <td class="text-center" style="
                                                        min-width: 120px;
                                                        max-width: 300px;
                                                        width: 130px;">
                                                {{item.Date}}
                                            </td>
                                            <td class="text-center">{{ item.ItemName}}</td>
                                            <td class="text-center">{{ item.TrxName}}</td>
                                            <td class="text-center">{{ item.Supplier}}</td>
                                            <td class="text-center">{{ item.QtyIn}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <ul class="pagination m-3" ng-show="totalPages > 1">
                                <li class="page-item" ng-class="{disabled: currentPage == 0}">
                                    <button class="page-link" ng-click="goToPage(currentPage - 1)">Previous</button>
                                </li>
                                <li class="page-item" ng-repeat="n in visiblePages() track by $index" ng-class="{active: n == currentPage}">
                                    <button class="page-link" ng-click="goToPage(n)">{{ n + 1 }}</button>
                                </li>
                                <li class="page-item" ng-class="{disabled: currentPage == totalPages - 1}">
                                    <button class="page-link" ng-click="goToPage(currentPage + 1)">Next</button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>