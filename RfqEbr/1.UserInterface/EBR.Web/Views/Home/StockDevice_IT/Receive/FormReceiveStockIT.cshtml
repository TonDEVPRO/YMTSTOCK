        <!-- Form Section -->
        <div class="row">
            <div class="col-md-12">
                <div class="card bg-light mx-3">
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 mb-1">
                                    <label for="receiveDate">Date in</label>
                                    <input type="date" class="form-control" id="receiveDate" ng-model="ReceiveTransaction.DateIn">
                                </div>
                                @*<div class="col-lg-3 col-6 mb-1">
                                    <label for="receiveType">Doc No</label>
                                    <input type="text" class="form-control" id="receiveType" ng-model="ReceiveTransaction.DocNo">
                                </div>*@
                                <div class="col-lg-3 col-6 mb-1">
                                    <label for="supplier">Type Receive</label>
                                    <!-- implement later -->
                                    <div class="dropdown position-relative" ng-init="GetTransactionData()">
                                        <input type="text"
                                               ng-model="ReceiveTransaction.TypeReceive"
                                               ng-focus="isTypeReceiveOpen = true"
                                               ng-blur="hideDropdown($event)"
                                               placeholder="Type to search..."
                                               class="form-control"
                                               autocomplete="off">
                                        <ul class="dropdown-menu w-100" ng-class="{'show': isTypeReceiveOpen}" style="max-height: 200px; overflow-y: auto;">
                                            <li ng-repeat="item in receiveList | filter:ReceiveTransaction.TypeReceive" ng-mousedown="selectTransactionType(item.TrxName)">
                                                <a class="dropdown-item" href="#">{{ item.TrxName }}</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-6 mb-1">
                                    <label for="receiveNo">Supplier</label>
                                    <div class="dropdown position-relative" ng-init="GetSupplierData()">
                                        <input type="text"
                                               ng-model="ReceiveTransaction.Supplier"
                                               ng-focus="isSupplierOpen = true"
                                               ng-blur="hideDropdown($event)"
                                               placeholder="Type to search..."
                                               class="form-control"
                                               autocomplete="off">
                                        <ul class="dropdown-menu w-100" ng-class="{'show': isSupplierOpen}" style="max-height: 200px; overflow-y: auto;">
                                            <li ng-repeat="item in supList | filter:ReceiveTransaction.Supplier" ng-mousedown="selectSupplier(item.SupName)">
                                                <a class="dropdown-item" href="#">{{ item.SupName }}</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-6 mb-1">
                                    <label for="poNo">P/O No.</label>
                                    <input type="text" class="form-control" id="poNo" ng-model="ReceiveTransaction.PONo">
                                </div>
                                <div class="col-lg-3 col-6 mb-3">
                                    <label for="itemName">Receive No</label>
                                    <input type="text" class="form-control" id="itemName" ng-model="ReceiveTransaction.ReceiveNo">
                                </div>

                            </div>
                            <div class="col-lg-12 col-12">
                                <div class="row">
                                    <div class="col-lg-11 col-9">
                                        <button type="button" class="btn btn-primary px-3 me-3 mb-2" data-bs-toggle="modal" data-bs-target="#AddItemModal">Add Item</button>
                                        <button ng-click="startScanner()" type="button" class="btn btn-primary px-3 me-3 mb-2" data-bs-toggle="modal" data-bs-target="#barcodeScaner">Scan Barcode</button>
                                    </div>
                                    <div class="col-lg-1 col-3">
                                        <button type="submit" ng-click="receiveItemStock()" class="btn btn-success px-3 mb-2">Save</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Section -->
        <div class="row mt-2">
            <div class="col-md-12 mx-3">
                <h2>Received Items</h2>
                <div>
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark sticky-top bg-white">
                            <tr>
                                <th scope="col">Code</th>
                                <th scope="col">Item Name</th>
                                <th scope="col">Qty In</th>
                                <th scope="col">Unit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in addDataToTable track by item.Code">
                                <td>
                                    <span>
                                        <button type="button" class="btn-close" aria-label="Delete" ng-click="clickToRemoveData(item.Code)"></button>
                                    </span>
                                    {{item.Code}}
                                </td>
                                <td>{{item.ItemName}}</td>
                                <td>
                                    <input ng-model="qtyInTemp[item.Code]" placeholder="Qty" type="text" class="form-control" id="receiveDate" style="width:75px">
                                </td>
                                <td>{{item.Unit}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Modal 1 -->
        <div class="modal fade" id="AddItemModal" tabindex="-1" aria-labelledby="AddItemModalModel" aria-hidden="true">
            <!-- Modal Type Can Fix Here -->
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="AddItemModalModel">Add Receive Item</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="px-3 pt-3">
                        <input type="text" class="form-control pe-0 me-5 mb-1" ng-model="searchText" ng-change="stockDeviceITFilter()" placeholder="Search by Code, ItemName">
                    </div>
                    <!-- Main Body is Here -->
                    <div class="modal-body pt-0 mt-2">
                        <div class="col-md-12">
                            <div>
                                <table class="table table-striped table-bordered">
                                    <thead class="thead-dark sticky-top bg-white">
                                        <tr>
                                            <th scope="col">Code</th>
                                            <th scope="col">Item Name</th>
                                            <th scope="col">Qty</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="cursor:pointer;" ng-click="clickOnTable(item.Code)" ng-repeat="item in stockList">
                                            <td>{{item.Code}}</td>
                                            <td>{{item.ItemName}}</td>
                                            <td>{{item.QtyBalance}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-around flex-row-reverse align-items-center align-content-center">
                        <div>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Modal 1 -->
        <!-- Modal 2 -->
        <div ng-controller="StockDeviceITController" ng-init="requestCameraAccess()" class="modal fade" id="barcodeScaner" aria-hidden="true" aria-labelledby="barcodeScanerModel" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="barcodeScanerModel">Scanner Barcode for AddItem</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                <!-- ข้อความแสดงสิทธิ์การเข้าถึงกล้อง -->
                                <p id="camera-permission-text" class="text text-danger">
                                    Feature ต้องการการเข้าถึงกล้องของคุณ เพื่อให้การสแกนบาร์โค้ดทำงานได้ โปรดดูการ Setting ใน Browser ของคุณ
                                </p>
                                <p id="camera-permission-success" class="text text-success">
                                    กล้องสามารถใช้งานได้แล้ว
                                </p>
                                @*<button class="btn btn-info" ng-click="requestCameraAccess()">เปิดการขออนุญาตใช้กล้อง</button>*@
                            </div>
                        </div>
                        <video id="scanner-container" autoplay playsinline style="width: 100%; height: 100%;"></video>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Modal 2 -->
    </div>
</div>