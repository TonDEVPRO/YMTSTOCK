                    <div class="card">
                        <div class="col-md-12 d-flex flex-wrap justify-content-between align-items-center p-3">
                            <div>
                                <button class="btn btn-primary rounded m-1" style="width: 90px;" disabled> Add </button>
                            </div>
                            <div>
                                <a href="@Url.Action("ViewReceiveStockIT", "ReceiveStockDeviceIT")?EmpNo=@Model.EmpNo&CodeId=@Model.CodeId" class="btn btn-success rounded m-1" style="width: 90px;"> Receive </a>
                                <a href="@Url.Action("ViewOutStockIT", "OutStockDeviceIT")?EmpNo=@Model.EmpNo&CodeId=@Model.CodeId" class="btn btn-warning rounded m-1" style="width: 90px;"> Out </a>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="px-3 py-1 col-md-8">
                                <input type="text" class="form-control pe-0 me-5 mb-1" ng-model="searchText" ng-change="stockDeviceITFilter()" placeholder="Search by Code, ItemName">
                                <!-- Checkbox -->
                                <div class="row ms-1">
                                    <div class="form-check col-md-6">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" ng-model="viewUSE" ng-change="stockDeviceITFilter()">
                                        <label class="form-check-label" for="flexCheckChecked">
                                            View only items are in stock
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <mute>รายการทั้งหมด: {{stockList.length}}</mute>
                                    </div>
                                </div>
                                <!-- Checkbox -->
                            </div>
                            <!-- Table -->
                            <div class="table-responsive m-3">
                                <table id="dataTable" class="display table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Code</th>
                                            <th class="text-center">Status</th>
                                            <th class="text-center">ItemName</th>
                                            <th class="text-center">Minimum</th>
                                            <th class="text-center">Qty</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in Data[currentPage]">
                                            <td class="text-center">{{item.Code}}</td>
                                            <td class="text-center">
                                                <span style="width:75px" class="fs-5 p-1" ng-class="{'badge badge-success-lighten':item.Status == 0,'badge badge-danger-lighten':item.Status == 1}">
                                                    {{ item.Status == 0 ? 'USE' : 'CANCEL' }}
                                                </span>
                                            </td>
                                            <td class="text-center" style="
                                                        min-width: 120px;
                                                        max-width: 500px;
                                                        width: 400px;">
                                                {{item.ItemName}}
                                            </td>
                                            <td class="text-center">{{ item.Minimum}}</td>
                                            <td class="text-center">{{ item.QtyBalance}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- Table -->
                            <ul class="pagination m-3" ng-show="totalPages > 1">
                                <li class="page-item" ng-class="{disabled: currentPage == 0}">
                                    <button class="page-link" ng-click="goToPage(currentPage - 1)">Previous</button>
                                </li>
                                <li class="page-item" ng-repeat="n in visiblePages()" ng-class="{active: n == currentPage}">
                                    <button class="page-link" ng-click="goToPage(n)">{{ n + 1 }}</button>
                                </li>
                                <li class="page-item" ng-class="{disabled: currentPage == totalPages - 1}">
                                    <button class="page-link" ng-click="goToPage(currentPage + 1)">Next</button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
