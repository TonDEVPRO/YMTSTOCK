
@using EBR.Web.Services
@{
    var pathImages = Url.Content("~/Images/");
    var parthIcon = pathImages + "YMTHolding.png";
    var baseurl = Request.Url.GetLeftPart(UriPartial.Authority) + Url.Content("~");
}
<!DOCTYPE html>

<html ng-app="MainApp">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="X-UA-Compatible" content="IE=10; IE=9; IE=8; IE=7; IE=EDGE" />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="mobile-web-app-capable" content="yes">
    <title>YMT-GROUP</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @*Fav and touch icons
        <link href="@(parthIcon)" rel="shortcut icon" type="image/x-icon" />
        <link rel="icon" href="@(parthIcon)" sizes="32x32" />
        <link rel="icon" href="@(parthIcon)" sizes="48x48" />
        <link rel="icon" href="@(parthIcon)" sizes="64x64" />*@

    <link rel="shortcut icon" href="~/Images/YMTHolding.png">

    <!-- Fontawesome -->
    <link href="~/Content/vendor/fortawesomes/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Notyf -->
    <link href="~/Content/vendor/notyf/notyf.min.css" rel="stylesheet" />
    <!-- Volt CSS -->
    <link href="~/Content/volt.css" rel="stylesheet" />
    <link href="~/Content/volt.css.map" rel="stylesheet" />

    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>

<body class="bg-soft" ng-app="MainApp">
    <main>
        <section class="vh-lg-100 d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center form-bg-image">
                    @RenderBody()
                </div>
            </div>
        </section>

    </main>

    <script src="~/Content/js/sweetalert299.js"></script>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/addon")
    @Scripts.Render("~/bundles/app")

    <script>
        window.baseUrl = "@baseurl";
        window.autherize = "@Url.Action("Index", "Home")";
        Icon = "@parthIcon";
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>